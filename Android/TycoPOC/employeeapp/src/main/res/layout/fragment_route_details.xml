<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="From:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="WhiteField"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="To:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="SilkBoard"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Driver Name:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Mahendra"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Driver Number:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="9242236159"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Pick Up Time:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="7:00 AM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Drop Time:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/detailTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="8:00 AM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginTextView" />


    </LinearLayout>

    <Button
        android:id="@+id/show_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/textview_rounded"
        android:padding="5dp"
        android:text="Show Route"
        android:textColor="@color/footerFont" />
</RelativeLayout>
