<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/b_panic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/panic"
            android:text="Panic"
            android:textColor="@color/footerFont"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_cancelroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/textview_rounded"
            android:padding="5dp"
            android:text="Cancel Route"
            android:textColor="@color/footerFont"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_routedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/textview_rounded"
            android:padding="5dp"
            android:text="Route Details"
            android:textColor="@color/footerFont"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>
